---
import { getI18N } from "@/i18n";
import CardProject from "../CardProject.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const PROJECTS = [
  {
    id: 1,
    title: i18n.PROJECTS.PROJECT_1.TITLE,
    description: i18n.PROJECTS.PROJECT_1.DESCRIPTION,
    image: "/project1.png",
    preview: "https://perfect-gif.vercel.app/",
    code: "",
  },
  {
    id: 2,
    title: i18n.PROJECTS.PROJECT_2.TITLE,
    description: i18n.PROJECTS.PROJECT_2.DESCRIPTION,
    image: "/project2.png",
    preview: "https://stvn-self.vercel.app/",
    code: "",
  },
];
---

<div class="flex flex-col justify-center items-center">
  <h2 class="text-3xl font-bold tracking-tighter sm:text-5xl text-primary">
    {i18n.PROJECTS.SUBTITLE}
  </h2>
  <p
    class="text-muted-foreground text-center text-balance md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
  >
    {i18n.PROJECTS.DESCRIPTION}
  </p>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 content-stretch pt-6">
    {PROJECTS.map((project) => <CardProject {...project} />)}
  </div>
</div>
