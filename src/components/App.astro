---
import { getI18N } from "@/i18n";

import Experience from "./sections/Experience.astro";
import SectionConteiner from "./SectionConteiner.astro";
import Hero from "./sections/Hero.astro";
import TitleSection from "./TitleSection.astro";
import About from "./sections/About.astro";
import Project from "./sections/Project.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<main class="container mx-auto min-h-screen">
  <div class="min-h-screen justify-center items-center flex flex-col">
    <SectionConteiner id="inicio" class="pb-14">
      <Hero />
    </SectionConteiner>
    <SectionConteiner id="inicio">
      <TitleSection title={i18n.EXPERIENCE.TITLE} class="pb-2" />
      <Experience />
    </SectionConteiner>
  </div>
  <SectionConteiner id="proyecto" class="pb-14">
    <div class="flex flex-col justify-center items-center mb-2">
      <span class="px-2 py-0.5 rounded-lg bg-secondary-foreground">
        <TitleSection title={i18n.PROJECTS.TITLE} class="p-0" />
      </span>
    </div>
    <Project />
  </SectionConteiner>
  <SectionConteiner id="sobremi" class="pb-14">
    <TitleSection title={i18n.ABOUT.TITLE} class="pb-2" />
    <About />
    <!-- <TitleSection title="Skills" /> -->
  </SectionConteiner>
  <SectionConteiner id="contacto" class="pb-16">
    <TitleSection title="Contacto" class="pb-2" />
    <h2
      class="flex gap-x-2 items-center text-2xl md:text-3xl font-semibold mb-6 text-gray-200"
    >
      <div class="flex flex-col gap-y-4">
        <p class="text-base text-gray-500 dark:text-gray-200">
          ¿Quieres trabajar juntos en tu próximo proyecto? ¡Contáctame!
        </p>
        <a
          href="mailto:stivenvillarreal@gmail.com"
          class="text-white text-sm inline-flex items-center underline hover:text-gray-300"
        >
          Envíame un correo
          <svg
            class="size-4 ms-[4px]"
            xmlns="http://www.w3.org/2000/svg"
            width="44"
            height="44"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M17 7l-10 10"></path>
            <path d="M8 7l9 0l0 9"></path>
          </svg>
        </a>
      </div>
    </h2>
  </SectionConteiner>
</main>
