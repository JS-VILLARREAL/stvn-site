---
import { getI18N } from "@/i18n";

import Experience from "./sections/Experience.astro";
import SectionConteiner from "./SectionConteiner.astro";
import Hero from "./sections/Hero.astro";
import TitleSection from "./TitleSection.astro";
import About from "./sections/About.astro";
import Project from "./sections/Project.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<main class="container mx-auto min-h-screen">
  <SectionConteiner id="inicio" class="pt-26 pb-14">
    <Hero />
  </SectionConteiner>
  <SectionConteiner id="sobremi" class="pb-14">
    <TitleSection title={i18n.ABOUT.TITLE} />
    <About />
  </SectionConteiner>
  <SectionConteiner id="experiencia" class="pb-14">
    <TitleSection title={i18n.EXPERIENCE.TITLE} />
    <Experience />
  </SectionConteiner>
  <SectionConteiner id="proyecto" class="pb-14">
    <div class="flex flex-col justify-center items-center">
      <TitleSection title={i18n.PROJECTS.TITLE} />
      <h2
        class="text-3xl font-bold tracking-tighter sm:text-5xl text-gray-800 dark:text-white"
      >
        {i18n.PROJECTS.SUBTITLE}
      </h2>
      <p
        class="text-muted-foreground text-center text-balance md:text-xl/relaxed lg:text-base/relaxed xl:text-xl/relaxed"
      >
        {i18n.PROJECTS.DESCRIPTION}
      </p>
    </div>
    <Project />
  </SectionConteiner>
  <SectionConteiner id="skill" class="pb-14">
    <TitleSection title="Skills" />
  </SectionConteiner>

  <SectionConteiner id="contacto" class="pb-16">
    <TitleSection title="Contacto" />
    <h2
      class="flex gap-x-2 items-center text-2xl md:text-3xl font-semibold mb-6 text-gray-200"
    >
      <div class="flex flex-col gap-y-4">
        <p class="text-base text-gray-500 dark:text-gray-200">
          ¿Quieres trabajar juntos en tu próximo proyecto? ¡Contáctame!
        </p>
        <a
          href="mailto:stivenvillarreal@gmail.com"
          class="text-white text-sm inline-flex items-center underline hover:text-gray-300"
        >
          Envíame un correo
          <svg
            class="size-4 ms-[4px]"
            xmlns="http://www.w3.org/2000/svg"
            width="44"
            height="44"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path d="M17 7l-10 10"></path>
            <path d="M8 7l9 0l0 9"></path>
          </svg>
        </a>
      </div>
    </h2>
  </SectionConteiner>
</main>
